<%= form_with(model: showtime, local: true) do |form| %>
  <% if showtime.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(showtime.errors.count, "error") %></h2>
      <ul>
        <% showtime.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :movie_id %>
    <%= form.collection_select :movie_id, @movies, :id, :title, prompt: "Select a movie" %>
  </div>

  <div>
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div>
    <%= form.label :seats_available %>
    <%= form.number_field :seats_available %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
